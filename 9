import threading
import time

def count_down(thread_name):
    print(f"{thread_name} началась выполнение.")
    for i in range(10, 0, -1):
        print(f"{thread_name}: {i}")
        time.sleep(1)  
    print(f"{thread_name} завершила выполнение.")

thread1 = threading.Thread(target=count_down, args=("Поток 1",))
thread2 = threading.Thread(target=count_down, args=("Поток 2",))

thread1.start()
thread2.start()

thread1.join()
thread2.join()

print("Оба потока завершили свою работу.")
